<section class="page wrapper">
    {% include "partials/blog/page-aside.njk" %}
    <div class="page__wrapper">
        <picture class="page__hero-image">
            <source media="(min-width: 1728px)" srcset="" type="image/webp" />
            <source media="(min-width: 1280px)" srcset="" type="image/webp" />
            <source media="(min-width: 678px)" srcset="" type="image/webp" />
            <img class="page__hero-image-img" src="/img/big-dragon-1x.webp" alt="A man in a cave looks at a large dragon"/>
        </picture>
        <div class="page__hero-heading">
            <h2 class="page__hero-title"> {{ main_image__title }} </h2>
            <a class="button button--primary button--l" href="#">{{ main_image__label }}</a>
        </div>
        <div class="page__hero-writer">
            <p>{{ main_image__autor }}</p>
            <div>{{ main_image__date }}</div>
        </div>  
        <div class="page__text">
            <p>
                {{page_text1}}
                <span class="page__text-button">{{ page_text2 }}</span>
                {{ page_text3 }}
                <span class="page__text-highlight">
                    <a href="#"> {{ page_text4 }}</a>
                </span>
                {{page_text5}}
            <p>
                {{ page_text6 }}
            </p>
            <ul class="page__text-list">
                <li> {{page_text7}}</li>
                <li>
                    {{page_text8}}
                    <span class="page__text-highlight"><a href="">{{page_text9}}</a></span>
                    {{page_text10}}
                </li>
            </ul>
            <ul class="page__text-items">
                {%for item in page_item_list%}
                <li>{{item.list_name}}</li>
                {% endfor %}
            </ul>
        </div>

        <div class="page__blockquote">
            <blockquote class="page__blockquote-item"> “{{ blockquote_text }}” </blockquote>
            <p class="page__blockquote-mark">
                <span class="mark mark--colored">{{blockquote_rating}}</span>
                <span class="mark">{{blockquote_autor}}</span>
            </p>
        </div>
        <div class="page__images-wrapper">
            <picture class="page__images-item">
                <source media="(min-width: 1728px)" srcset="" type="image/webp" />
                <source media="(min-width: 1280px)" srcset="" type="image/webp" />
                <source media="(min-width: 678px)" srcset="" type="image/webp" />            
                <img
                    class="page__images-img"
                    src="/img/small-dragon-1x.webp"
                    alt="A little dragon with blue ice"
                />
            </picture>
            <picture class="page__images-item">
                <source media="(min-width: 1728px)" srcset="" type="image/webp" />
                <source media="(min-width: 1280px)" srcset="" type="image/webp" />
                <source media="(min-width: 678px)" srcset="" type="image/webp" />           
                <img
                    class="page__images-img"
                    src="/img/medium-dragon-1x.webp"
                    alt="A man in a cave width dragon"
                />
            </picture>
        </div>

        <h2 class="page__title">{{ info_text_title }}</h2>
        <div class="page__text">
            <p>{{info_text1}}</p>
            <p>{{info_text2}}</p>
        </div>
        <h2 class="page__title">{{ info_text_title2 }}</h2>
        <div class="page__text">    
            <p>{{info_text3}}</p>
        </div>
     
        <div class="page__links-wrapper">
            <div class="page__links-wrapper-tags">
                <h4 class="page__links-wrapper-title">Tags:</h4>
                <ul class="page__links-wrapper-list">
                    {% for item in tag_item %}
                    <li class="page__links-wrapper-item">
                        <a class="button button--secondary button--s" href="#">{{ item.name }}</a>
                    </li>
                    {% endfor %}
                </ul>
            </div>
                
            <div class="page__links-wrapper-shares">
                <h4 class="page__links-wrapper-title">Share:</h4>
                <ul class="page__links-wrapper-list">
                    {% for item in share_item %}
                    <li class="page__links-wrapper-item">
                        <a class="button button--secondary button--s" href="#">
                            <img src="{{ item.src }}" alt="Twitter"/>
                        </a>
                    </li>
                    {% endfor %}
                </ul>
            </div>

        </div>
    </div>
</section>
