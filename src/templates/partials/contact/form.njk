<div class="contact-form">
    <div class="contact-form__wrapper">
        <form class="contact-form__form" action="url" method="post">
            <div class="contact-form__text">
                <h1 class="contact-form__text-title">Get in touch</h1>
                <p class="contact-form__text-subtitle">
                    Browse through the most freuently asked questions
                </p>
            </div>
            <div class="contact-form__switch">
                <label class="contact-form__label" for="switch">Use my profile information</label>
                <input class="switcher" type="checkbox" id="switch"/>
            </div>

            <div class="contact-form__item">
                <label class="contact-form__label" for="name">Name</label>
                <input class="contact-form__input" type="text" id="name" name="user-name" required/>
                {# <span class="contact-form__error">Please enter your name</span> #}
            </div>

            <div class="contact-form__item">
                <label class="contact-form__label" for="lastname">Lastname</label>
                <input class="contact-form__input" type="text" id="lastname" name="surname" required />
                {# <span class="contact-form__error">Please enter your lastname</span> #}
            </div>

            <div class="contact-form__item">
                <label class="contact-form__label" for="birthday">Date of birth</label>
                <input class="contact-form__input" type="date" id="birthday" name="birthday" required/>
                {# <span class="contact-form__error">Please enter correct date</span> #}
            </div>

            <div class="contact-form__item">
                <p class="contact-form__heading">Gender</p>
                <label class="contact-form__label">
                    <input type="radio" class="default-radio" name="gender">
                    <span class="custom-radio"></span>
                    Male
                </label>
                <label class="contact-form__label">
                    <input type="radio" class="default-radio" name="gender">
                    <span class="custom-radio"></span>
                    Female
                </label>
            </div>

            <div class="contact-form__item">
                <label class="contact-form__label" for="email">Email</label>
                <input class="contact-form__input" type="email" id="email" name="e-mail" required/>
                {# <span class="contact-form__error">Please enter correct email</span> #}
            </div>
            <div class="contact-form__item">
                <label class="contact-form__label" for="phone">Phone Number</label>
                <input class="contact-form__input" type="tel" pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}" id="phone" name="user-phone" required/>
                {# <span class="contact-form__error">Phone format: 123-456-7890</span> #}
            </div>

            <div class="contact-form__item">
                <label class="contact-form__label" for="message">Message</label>
                <textarea class="contact-form__input" name="message" id="message"></textarea>
            </div>
            <div class="contact-form__item">
                <label class="contact-form__terms-agree">
                    <input type="checkbox" class="default-checkbox" required>
                    <span class="custom-checkbox"></span>
                    By clicking on the ‘Send Message’ button I agree to
                    <a class="contact-form__terms-link link" href="#">all the terms of the security policy</a>
                </label>
            </div>
            <button class="button button--primary button--l" type="submit">
                Send Message
            </button>
        </form>
    </div>    
</div>
